<div class="card mb-2">
    <div class="card-header bg-nb-black text-nb-white">
        <h4><i class="fas fa-fire"></i> Most popular</h4>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each sidebar.popular }}
                <div class="col-md-6">
                    <a href="/images/{{uniqueId}}"><img src="./public/upload/{{filename}}" alt="" class='w-100 h-100 img-thumbnail'></a>
                </div>
            {{/each}}
        </div>
    </div>
</div>